<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_retry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/txs_fail"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/txs_fail" />

    <TextView
        android:id="@+id/txs_fail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="网络连接超时"
        android:textColor="@color/textColor666"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txs_fail_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="请检查您的手机是否联网"
        android:textColor="@color/textColor999"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txs_fail_retry_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="点击屏幕重新加载"
        android:textColor="@color/textColor999"
        android:textSize="14sp" />


</LinearLayout>
